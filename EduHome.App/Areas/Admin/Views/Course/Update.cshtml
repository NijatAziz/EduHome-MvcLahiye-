@using EduHome.Core.DTOS.Course;
@model CourseGetDto

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <form enctype="multipart/form-data" method="post" class="forms-sample">
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group m-5">
                            <input accept="image/*" type="file" name="ImageFile" class="form-control" placeholder="Image">
                            <br>
                            <img style="width:150px;height:150px;" src="~/img/course/@Model.ImageFile" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span class="text text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Desc"></label>
                            <input asp-for="Desc" class="form-control" placeholder="Desc">
                            <span class="text text-danger" asp-validation-for="Desc"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="About"></label>
                            <input asp-for="About" class="form-control" placeholder="About">
                            <span class="text text-danger" asp-validation-for="About"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HowToApply"></label>
                            <input asp-for="HowToApply" class="form-control" placeholder="HowToApply">
                            <span class="text text-danger" asp-validation-for="HowToApply"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Certification"></label>
                            <input asp-for="Certification" class="form-control" placeholder="Certification">
                            <span class="text text-danger" asp-validation-for="Certification"></span>
                        </div>
                        <div class="form-group">
                            <select name="CategoryId" class="form-select" aria-label="Default select example">
                                <option selected>Category</option>
                                @foreach (var item in ViewBag.Category)
                                {
                                        @if (Model.CategoryGetDto.Id == item.Id)
                                        {
                                            <option selected value="@item.Id">@item.Name</option>
                                        }
                                        else
                                        {
                                            <option  value="@item.Id">@item.Name</option>
                                        }
                                    } 
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <select name="FeatureId" class="form-select" aria-label="Default select example">
                                <option selected>Feature</option>
                                @foreach (var item in ViewBag.Feature)
                                {
                                        @if (Model.FeatureGetDto.Id == item.Id)
                                        {
                                        <option selected value="@item.Id">@item.Starts - @item.CourseFee</option>
                                        }
                                        else
                                        {
                                        <option value="@item.Id">@item.Starts - @item.CourseFee</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script>
    const otherimages = document.querySelectorAll(".otherimages");

    otherimages.forEach(image => {
        image.addEventListener("click", (e) => {
            e.preventDefault();
            const id = image.getAttribute("data-id")
            fetch(`/Admin/Product/removeimage/${id}`)
                .then(x => x.json())
                .then(x => {
                    if (x.status== 200) {
                        image.remove();
                    } else {
                        alert("xetabasverdi")
                    }
                }
                )

        })
    })
</script>