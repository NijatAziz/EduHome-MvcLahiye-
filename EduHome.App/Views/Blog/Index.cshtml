@using EduHome.Core.DTOS.Blog
@using EduHome.Core.DTOS.Category
@model List<BlogGetDto>
@{
    ViewData["Title"] = "Blog Page";
    var categories = ViewBag.Categories as IEnumerable<CategoryGetDto>;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog / right side bar</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @if (Model.Count>0)
                    {

                        @foreach (var item in Model)
                        {
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="single-blog mb-60">
                                    <div class="blog-img">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/blog/@item.Image" alt="blog"></a>
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </div>
                                    <div class="blog-content">
                                        <div class="blog-top">
                                            <p>@item.TeacherGetDto.FullName  /   @item.Date.ToString("MM/dd/yyyy")/  <i class="fa fa-comments-o"></i> 4</p>
                                        </div>
                                        <div class="blog-bottom">
                                            <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title </a></h2>
                                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    }else
                    {
                           <h1>bele data yoxdur</h1>
                    }

                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" asp-controller="Blog" asp-action="index">
                                <input type="search" placeholder="Search..." name="searchText" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in categories)
                            {
                                <li><a href="#">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a ><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @foreach (var item in Model.Take(3))
                        {
                            <div class="single-post mb-30">
                                <div class="single-post-img">
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                        <img style="width:100px" src="~/img/blog/@item.Image" alt="post">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h4>
                                    <p>@item.TeacherGetDto.FullName / @item.Date.ToString("MM/dd/yyyy") </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->