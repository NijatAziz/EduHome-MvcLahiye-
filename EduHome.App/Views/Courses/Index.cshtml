@using EduHome.Core.DTOS.Course;
@using EduHomeServices.Responses;
@{
    ViewData["Title"] = "Courses Page";
}

@model PagginatedResponse<CourseGetDto>
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
          @foreach (var item in Model.Items)
         {
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-course mb-70">
                    <div class="course-img">
                        <a asp-controller="Courses" asp-action="Detail" asp-route-id="@item.Id">
                            <img src="~/img/course/@item.ImageFile" alt="course">
                            <div class="course-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </a>
                    </div>
                    <div class="course-content">
                        <h3><a asp-controller="Courses" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h3>
                        <p>@(item.Desc.Length > 20 ? item.Desc.Substring(0, 20) : item.Desc)</p>
                        <a class="default-btn" asp-controller="Courses" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                    </div>
                </div>
            </div>
         }
        </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item @(1==Model.CurrentPage? "disabled":null)">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i==Model.CurrentPage? "disabled":null)"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
            }
            <li class="page-item @(Model.TotalPages==Model.CurrentPage? "disabled":null)">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
            </li>
        </ul>
    </nav>
</div>
</div>
<!-- Course End -->
